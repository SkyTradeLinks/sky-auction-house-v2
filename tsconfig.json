{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "DOM"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true
  },
  "include": [
    "src/sdk/**/*.ts", // Include TypeScript files in the src directory and its subdirectories
    "src/tests/**.ts",
    "src/tests/**/*.ts" // Include TypeScript files in the tests directory and its subdirectories
  ]
}
